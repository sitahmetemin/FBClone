@model FBClone.WebUI.Models.UserViewModels
@{
    Layout = "../Shared/_LayoutProfil.cshtml";
}
<html>
<head>
    <title>Profile</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="container">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="width: 100%" src="https://www.scylladb.com/wp-content/uploads/800x300-blog-secondary-index-cover.png" alt="First slide">
                <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" class="card-img-overlay" style="margin-top: 210px" width="230px" alt=""/>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-4">
            <div class="card mb-2">
                <div class="card-header">
                    Profile
                </div>
                <div class="card-body">
                    <ul class="noktasiz">
                        <li>@ViewData["FirstName"]</li>
                        <li>@ViewData["LastName"]</li>
                        <li>@ViewData["DisplayName"]</li>
                        <li>@ViewData["Email"]</li>
                    </ul>
                </div>
            </div>
            <div class="card mb-2">
                <div class="card-header">
                    Photos
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" alt="" class="img-thumbnail"/>
                        </div>
                        <div class="col-md-6">
                            <img src="http://www.lefconevis.com/wp-content/uploads/2016/05/profile-orville-liburd.jpg" alt="" class="img-thumbnail"/>
                        </div>
                        <div class="col-md-6">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSBcm6rSMgiHshC5F5H7PxymQty8nLQLfUnc_v8FqVpjLg5laRL" alt="" class="img-thumbnail"/>
                        </div>
                        <div class="col-md-6">
                            <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" alt="" class="img-thumbnail"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-2">
                <div class="card-header">
                    Friends
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" alt="" class="img-thumbnail"/>
                        </div>
                        <div class="col-md-6">
                            <img src="http://www.lefconevis.com/wp-content/uploads/2016/05/profile-orville-liburd.jpg" alt="" class="img-thumbnail"/>
                        </div>
                        <div class="col-md-6">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSBcm6rSMgiHshC5F5H7PxymQty8nLQLfUnc_v8FqVpjLg5laRL" alt="" class="img-thumbnail"/>
                        </div>
                        <div class="col-md-6">
                            <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" alt="" class="img-thumbnail"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="card mb-4">
                <div class="card-header">
                    Paylaş
                </div>
                <form action="/User/Shared" class="form-group" method="post">
                    <div class="card-body">
                        <input type="text" name="Content" placeholder="Something shared" class="form-control mb-3"/>
                        <button class="float-right btn btn-primary" type="submit">
                            <i class="fa fa-send"></i>
                        </button>
                    </div>
                </form>
            </div>
            @foreach (var shared in Model.Shareds)
            {
                <div class="card shadow mb-2">
                    <div class="card-header">
                        <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" class="rounded-circle" width="30px" alt="Alternate Text" />
                        @shared.User.DisplayName
                    </div>
                    <div class="card-body">
                        @shared.Content
                    </div>
                    <div class="card-footer">
                        <div class="btn-group d-flex" role="group" aria-label="Basic example">
                            <a href="/user/like/@shared.Id" class="btn btn-light flex-fill">
                                <i class="fa fa-heart-o"></i>
                            </a>
                            <a href="/user/share/@shared.Id" class="btn btn-light flex-fill">
                                <i class="fa fa-share-square-o"></i>
                            </a>
                            <a href="/user/comment/@shared.Id" class="btn btn-light flex-fill">
                                <i class="fa fa-comment-o"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</body>
</html>