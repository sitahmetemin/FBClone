@model FBClone.WebUI.Models.UserViewModels
@{
    Layout = "../Shared/_LayoutProfil.cshtml";
}
<div class="container">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="width: 100%" src="https://www.scylladb.com/wp-content/uploads/800x300-blog-secondary-index-cover.png" alt="First slide">
                <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" class="card-img-overlay" style="margin-top: 210px" width="230px" alt=""/>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        @if (Session["ID"] != null)
        {
            <div class="col-4">
                <div class="card mb-2">
                    <div class="card-header">
                        Profile
                    </div>
                    <form action="/user/profileUpdate" class="form-group" method="post">
                        <div class="card-body">
                            <input class="form-control mb-1" type="text" name="FirstName" value="@ViewData["FirstName"]"/>
                            <input class="form-control mb-1" type="text" name="LastName" value="@ViewData["LastName"]"/>
                            <input class="form-control mb-1" type="text" name="DisplayName" readonly="readonly" value="@ViewData["DisplayName"]"/>
                            <input class="form-control mb-1" type="text" name="Email" readonly="readonly" value="@ViewData["Email"]"/>
                            <input class="form-control mb-1" type="password" name="Password" value="@ViewData["Password"]"/>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-outline-dark"><i class="fa fa-send"></i> &nbsp; Save</button>
                        </div>
                    </form>

                </div>
                <div class="card mb-2">
                    <div class="card-header">
                        Photos
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" alt="" class="img-thumbnail"/>
                            </div>
                            <div class="col-md-6">
                                <img src="http://www.lefconevis.com/wp-content/uploads/2016/05/profile-orville-liburd.jpg" alt="" class="img-thumbnail"/>
                            </div>
                            <div class="col-md-6">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSBcm6rSMgiHshC5F5H7PxymQty8nLQLfUnc_v8FqVpjLg5laRL" alt="" class="img-thumbnail"/>
                            </div>
                            <div class="col-md-6">
                                <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" alt="" class="img-thumbnail"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-2">
                    <div class="card-header">
                        Friends
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" alt="" class="img-thumbnail"/>
                            </div>
                            <div class="col-md-6">
                                <img src="http://www.lefconevis.com/wp-content/uploads/2016/05/profile-orville-liburd.jpg" alt="" class="img-thumbnail"/>
                            </div>
                            <div class="col-md-6">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSBcm6rSMgiHshC5F5H7PxymQty8nLQLfUnc_v8FqVpjLg5laRL" alt="" class="img-thumbnail"/>
                            </div>
                            <div class="col-md-6">
                                <img src="http://keenthemes.com/preview/metronic/theme/assets/pages/media/profile/profile_user.jpg" alt="" class="img-thumbnail"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="col-8">
            @if (Session["ID"] != null)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        Paylaş
                    </div>
                    <form action="/User/Shared" class="form-group" method="post">
                        <div class="card-body">
                            <input type="text" name="Content" placeholder="Something shared" class="form-control mb-3"/>
                            <button class="float-right btn btn-primary" type="submit">
                                <i class="fa fa-send"></i>
                            </button>
                        </div>
                    </form>
                </div>
            }
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Friends</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Photos</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">@Html.Partial("Shareds")</div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">@Html.Partial("Friends")</div>
                <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">@Html.Partial("Photos")</div>
            </div>
            
        </div>
    </div>
</div>